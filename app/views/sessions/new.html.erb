<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4">Login to Xpensify</h2>

    <%= form_with url: login_path, method: :post, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autofocus: true, placeholder: "Enter your email" %>
        </div>
      
        <div class="form-group mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true, minlength: 8, placeholder: "Enter your password" %>
        </div>
      
        <div class="d-grid">
          <%= form.submit "🔐 Log In", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      
      

    <p class="text-center mt-3">
      Don’t have an account? <%= link_to "Sign up", signup_path, class: "text-decoration-none" %>
    </p>
  </div>
</div>
